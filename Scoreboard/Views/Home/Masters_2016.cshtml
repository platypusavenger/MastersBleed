                            $scope.scores.player[i].pickedBy += ", ";
                        $scope.scores.player[i].pickedBy += pickedBy;
                    }

                    var result = $scope.scores.player[i];
                    if (result.score == '')
                        result.scoreKey = 0;
                    if (result.thru == '')
                        result.thruKey = 0;

                    return result;
                }
            }

            return { name: '', score: '', thru: '', today: '', status: 'scoreHold' };
        };

