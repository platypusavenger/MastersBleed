        $scope.getDelta = function (person) {
            var delta = person.score - person.base;
            if ($scope.showPenalty)
                delta = delta - person.cutPenalty;
            var value = "";
            if (delta > 0)
                value = "+" + delta;
            else if (delta == 0)
                value = "E";
            else
                value = delta;

            return value;
        };

