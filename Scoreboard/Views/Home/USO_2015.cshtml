        $scope.scoresCallback = function (scores) {
            $scope.scores = scores.homeScores;
            $scope.cutLine = '';
            $scope.cutPenalty = '';
            $scope.totalScore = 0;
            $scope.avgScore = 0;

            $scope.cutLine = "E";
